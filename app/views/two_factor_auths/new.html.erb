<%= render "shared/second-header"%>

<%= form_with url: two_factor_auth_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      認証コードを入力
    </h1>
  </div>
  <% if @error %>
    <div class='login-flash-message'>
      <%= @error %>
    </div>
  <% end %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">認証コード</label>
    </div>
    <%= f.text_field :otp_attempt %>
  </div>
  <div class='login-btn'>
    <%= f.submit '送信', class:"login-red-btn" %>
  </div>
</div>
<% end %>

<div class="qr">
  <div class="qr-buttons">
    <%= button_to "QRコードを表示", two_factor_auth_path, class:"qr-button", method: :get %>
  </div>
</div>


<%= render "shared/second-footer"%>